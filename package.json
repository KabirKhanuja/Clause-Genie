{
  "name": "clause-genie-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace=@clause-genie/web run dev",
    "dev:api": "npm --workspace=@clause-genie/api run dev",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build:web": "npm --workspace=@clause-genie/web run build",
    "build:api": "npm --workspace=@clause-genie/api run build",
    "start:web": "npm --workspace=@clause-genie/web run start",
    "start:api": "npm --workspace=@clause-genie/api run start",
    "lint": "eslint"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}